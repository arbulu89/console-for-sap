{{- define "pagination" -}}
  <!-- find pagination js code in layout.js -->
  <nav class='pagination-wrap margin-top-m justify-content-end' aria-label='Page navigation example'>
    <div class='pagination-count'>
      Total <strong>{{ .ItemCount }} items</strong>
    </div>
    <ul class='pagination-count pagination'>
      <li value='1' class='page-item'><a class='page-link' href='{{ .Href 1 0 }}'>First</a></li>
      {{ $Pagination := . }}
      {{ $Pages := .GetCurrentPages }}
      {{- range $Page := $Pages }}
      <li value='{{ $Page.Index }}' class='page-item {{ if $Page.Active }}active{{ end }}'><a class='page-link' href='{{ $Pagination.Href $Page.Index 0 }}'>{{ $Page.Index }}</a></li>
      {{- end }}
      <li value='{{ .PageCount }}'class='page-item'><a class='page-link' href='{{ .Href .PageCount 0 }}'>Last ({{ .PageCount }})</a></li>
    </ul>
    <div class='pagination-actions margin-right-m'>
      <!--
      <div class='goto-field'>
        Go to
        <input class='form-control' id='username' type='text'>
      </div>
      -->
      <div class='pagination-text'>
        Items per page
      </div>
      <div class='dropdown'>
        <button class='btn btn-sm btn-secondary dropdown-toggle' type='button' data-toggle='dropdown'>
          <i class='eos-icons eos-18'>keyboard_arrow_down</i>
          {{ .PerPage }}
        </button>
        <div class='dropdown-menu' aria-labelledby='dropdownMenuButton'>
          {{- range $i := .GetPerPages }}
          <a class='dropdown-item' href='{{ $Pagination.Href 0 $i }}'>{{ $i }}</a>
          {{- end }}
        </div>
      </div>
    </div>
  </nav>
{{- end -}}
